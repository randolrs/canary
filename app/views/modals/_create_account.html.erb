<div class="modal-container brand-gradient-background vertical mobile-device-only" id="create-account-modal">

	<span class="glyphicon glyphicon-remove dismiss-parent red"></span>

	<div class="modal-content centered">

		<div class="simple-landing-container">

			<%= form_for(:user, :url => registration_path(:user)) do |f| %>

			    <h2 class="light">Sign up</h2>

			    <% if @purchase%>
			    	<%= hidden_field_tag 'purchase_id', @purchase.id %>
			    <%end%>

			    <div class="field">
			      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
			    </div>
			    
			    <div class="field">
			      <%= f.text_field :display_name, placeholder: "Display Name" %>
			    </div>

			    <div class="field">
			      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
			    </div>

			    <div class="actions">
			      <%= f.submit "Create Account", class: "button medium orange-background" %>
			    </div>

			<% end %>

		</div>

	</div>

</div>