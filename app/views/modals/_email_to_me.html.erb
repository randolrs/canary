<div class="modal-container brand-gradient-background vertical mobile-device-only" id="email-to-me-modal">

	<span class="glyphicon glyphicon-remove dismiss-parent"></span>

	<div class="modal-content centered">

		<div class="simple-landing-container">

			<%= form_tag email_to_me_path(item.id), id: 'emailMeForm' do %>

				<input type="text" name="email" class="" required></input>

				<br>

				<input type="submit" class="button large orange-background" value="Send Email">
			   
			<% end %>

		</div>

	</div>

</div>