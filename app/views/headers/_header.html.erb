<div class="header-container <% if @hide_header %> mobile-only <%end%>">

	<% if user_signed_in?%>

		<div class="context-header-content full-menu-options">

			<a class="return-home" href="<%= root_path %>"><span class="glyphicon glyphicon-chevron-left" style="margin-right: 5px;"></span>Return to Dashboard</a>


			<%= link_to "Artagami", root_path, class: "title" %>

		</div>

		<div class="mobile-menu-options">

			<div class="header-content">

			<% if user_signed_in? %>
				
				<% if current_user.is_artist %>

				<ul class="header-left">

					<li><%= link_to "Artagami", root_path, class: "header-logo" %></li>

				</ul>

				<ul class="header-right">

					<!-- <li class="mobile-only"><a href="<%# inbox_path %>"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></a></li> -->

					<li class="mobile-only"><a href="<%= profile_path(current_user.display_name) %>"><%= image_tag current_user.image.url(:medium), class: "header-profile-image"%></a></li>

					<li class="mobile-only"><a href="<%= settings_path %>"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></a></li>

				</ul>

				<%end%>

			<%end%>

			</div>

		</div>

	<%else%>

		<div class="header-content">

			<ul class="header-left">

				<li><%= link_to "Artagami", root_path, class: "header-logo" %></li>

			</ul>

			<ul class="header-right">
				
				<li><%= link_to "Login", new_user_session_path %></li>
						
				<li><%= link_to "Signup", new_user_registration_path %></li>

			</ul>

		</div>


	<%end%>

	
</div>