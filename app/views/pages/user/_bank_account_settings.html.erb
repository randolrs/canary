<%= render 'pages/user/dashboard_header' %>


	<div class="dashboard-fixed-header">
		<ul class="horizontal full-length header">

			<li><%= link_to "Profile", settings_path %></li><li><%= link_to "Personal", payment_settings_path %></li><li class="active"><%= link_to "Payments", bank_accounts_path %></li>

		</ul>
	</div>

	<div class="dashboard-item" id="bank-accounts">

		<% if @defaultaccount %>

			<h3>Current Bank Account:</h3>
  	
			<p><%=@defaultaccount.bank_name + " •••• •••• •••• " + @defaultaccount.last4 %></p>
			
			<br>

		<%end%>

  		<%= form_tag new_bank_account_path, id: 'bankAccountForm', class: 'edit_user_settings' do %>

			<table class="bank-account-form">

		      	<span class='payment-errors'></span>

		      	<tr>
					<td><b>Bank Location</b></td>
					<td><select name="country">
		                <option value="US">United States</option>
		                <option value="CAN">Canada</option>
		            </select></td>
				</tr>
				<tr>
					<td><b>Name on Account</b></td>
					<td><input type="text" name="accountHolder"/></td>
				</tr>
				<tr>
					<td><b>Routing Number</b></td>
					<td><input type="text" size="9" name="routingNumber" autocomplete="off"></td>
				</tr>
				<tr>
					<td><b>Account Number</b></td>
					<td><input type="text" size="17" name="accountNumber" autocomplete="off"></td>
				</tr>
				<tr>
					<td><b>Description</b></td>
					<td><input type="text" size="9" name="description"/></td>
				</tr>


			</table>

			<input type="submit" value="Update Bank Account" class= "blue-background medium">

  		<% end %>

  				<%#render'bank_accounts/addbankaccountform'%>

  	</div>