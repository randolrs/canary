<section class="home-primary">
	
	<h2>Artwork recommended for you</h2>
	
	<div id="portfolio" class="transitions-enabled">
	
		<% current_user.recommended_artwork(6).each do |item| %>
			
			<%= render :partial => 'item_arts/index_show', :locals => {:item => item, :image_only => true} %>

		<%end%>

	</div>

</section>

<section class="home-primary">
	
	<h2>Artists worth exploring</h2>

	<% current_user.recommended_artists(6).each do |user| %>
		
		<%= link_to(profile_path(user.display_name)) do %>

			

				<%= image_tag user.image.url(:medium), class: "medium-profile-image"%>

			

		<%end%>

	<%end%>

</section>

<section class="home-primary">
	<h2>Browse our artwork</h2>
</section>

