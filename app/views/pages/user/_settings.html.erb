<%= render 'pages/user/dashboard_header' %>

<%= render 'pages/user/settings_header' %>

<div class="dashboard-item" id="profile">

	<%= form_for(current_user, url: registration_path(current_user), html: { method: :put, class: "edit_user_settings" }) do |f| %>

	    <div class="field">
	      <%= f.label :email %><br />
	      <%= f.email_field :email %>
	    </div>

	    <br />

	    <div class="field">
	      <%= f.label :display_name %><br />
	      <%= f.text_field :display_name %>
	    </div>

	    <br />

	    <div class="field">
	      <label>Avatar</label>
	      <%= f.file_field :image, class: "form-control" %>
	    </div>

	   
	    <br />
	    <% if current_user.is_artist %>
	    
		    <div class="field">
		      <%= f.label "Artist Statement" %><br />
		      <%= f.text_area :about %>
		    </div>

		    <br />

	    <%end%>

	    <div class="field">
	      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
	      <%= f.password_field :password, autocomplete: "off" %>
	      <% if @minimum_password_length %>
	        <br />
	        <em><%= @minimum_password_length %> characters minimum</em>
	      <% end %>
	    </div>

	    <br />

	    <div class="actions">
	      <%= f.submit "Update", class:"button medium orange-background" %>
	    </div>

		<% end %>

</div>