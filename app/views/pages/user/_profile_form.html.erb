
<%= form_for(current_user, url: registration_path(current_user), html: { method: :put, class: "edit_user_settings" }) do |f| %>

    <div class="field">
      <%= f.label :display_name %><br />
      <%= f.text_field :display_name %>
    </div>

    <br />



    <% if current_user.is_artist %>
    	
	    <div class="field">
	      <label>Artist Profile Photo</label>
	      <%= f.file_field :image, class: "form-control" %>
	    </div>

   
    	<br />

	    <div class="field">
	      <%= f.label "Artist Statement" %><br />
	      <%= f.text_area :about %>
	    </div>

	    <br />

	<% elsif current_user.is_gallery %>

		<div class="field">
	      <label>Gallery Profile Photo</label>
	      <%# f.file_field :image, class: "form-control" %>
	    </div>

		<div class="field">
	      <%= f.label "About our Gallery" %><br />
	      <%# f.text_area :about %>
	    </div>

    <%end%>

    <br />

    <div class="actions">
      <%= f.submit "Update", class:"button large bright-blue-background" %>
    </div>

<% end %>

