<div class="dashboard-panel" id="settings-content">

	<%= render 'pages/user/warnings' %>
	
	<h3><span class="glyphicon glyphicon-cog" aria-hidden="true" style="margin-right: 5px;"></span>Account Settings</h3>

	<ul class="horizontal">

		<li><%= link_to "Profile", settings_path %></li>
		<li class="active"><%= link_to "Payment Information", payment_settings_path %></li>
		<li><%= link_to "Payment Accounts", bank_accounts_path %></li>

	</ul>

	<div class="dashboard-panel-content">
		
		<%= form_tag update_stripe_account_path, id: 'stripeAccountForm', class: 'edit_user_settings' do %>

		    <div class="field">
		      <label>First Name</label><br />
		      <input type="text" placeholder="First Name" name="firstName" value=<%=@firstName%>></input>
		    </div>


		    <br />

		    <div class="field">
		      <label>Last Name</label><br />
		      <input type="text" placeholder="Last Name" name="lastName" value=<%=@lastName%>></input>
		    </div>


		    <br />

		    <div class="field">
		    	<label>DOB</label><br />
		    	<input type="date" max ="2010-01-01" min ="1905-01-01" name="dobDate" value="<%= @dob_year%>-<%= @dob_month%>-<%= @dob_day%>">

			</div>

		    <div class="actions">
		      <input type="submit" value="Update" id="update-stripe-account" class="button blue-background large item-buy-action">
		    </div>

  		<% end %>

  	</div>

</div>