
<div class="dashboard-item" id="works">
  
  <%= render 'pages/user/warnings' %>

  	<div class="dashboard-actions centered">

  		<%= link_to "+ Add Work", new_work_path, class:'black-background button medium'%>

	</div>

	<div class="dashboard-section-header">

		<ul>
			<li><a class="click-to-reveal active" data-reveal-panel-id="all">All</a></li><li><a class="click-to-reveal" data-reveal-panel-id="for-sale">For Sale</a></li><li><a class="click-to-reveal" data-reveal-panel-id="sold">Sold</a></li>
		</ul>

	</div>

	<div class="reveal-panel" id="all">

		<%= render :partial => 'item_arts/index_grid', :locals => {:items =>  current_user.my_work.sort_by{|e| e[:created_at]}.reverse, :image_only => false, :columns => 3} %>

	</div>

	<div class="reveal-panel default-off" id="for-sale">

		<%= render :partial => 'item_arts/index_grid', :locals => {:items =>  current_user.my_work.select { |work| work.is_set_to_sold == nil or work.is_set_to_sold == false }, :image_only => false, :columns => 3} %>

	</div>

	<div class="reveal-panel default-off" id="sold">

		<%= render :partial => 'item_arts/index_grid', :locals => {:items =>  current_user.my_work.select { |work| work.is_set_to_sold == true}, :image_only => false, :columns => 3} %>


	</div>


  
  <%= render :partial => 'item_arts/index_grid', :locals => {:items =>  current_user.item_arts.reverse, :image_only => false, :columns => 3} %>
   
  <%= render 'layouts/add_artwork_cta' %>

</div>





