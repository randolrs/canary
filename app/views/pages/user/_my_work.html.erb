<div class="dashboard-panel" id="work-content">

	<%= render 'pages/user/warnings' %>
	
	<h3 class="text-header-underline">My Work</h3>

	<ul>

		<li class="active"><a>Work</a></li>
		<li><a>Exhibitions</a></li>

	</ul>

	<div class="dasboard-panel-content">

		<% current_user.item_arts.each do |item| %>

			<%= link_to(item) do %>
		
				<div class="lightbox">

					<%= image_tag item.image.url(:medium), class: "medium-item-image"%>

					<br>

					<h3><%= item.name %></h3>

					<h3><%= number_to_currency(item.price) %></h3>

					<a class="button blue-background">Unlist</a>

				</div>

			<%end%>

		<% end%>


	</div>

</div>