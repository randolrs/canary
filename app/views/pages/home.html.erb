
<% unless user_signed_in? %>

	<%= render 'pages/basic_landing_page' %>

<%else%>

	<div class="dashboard-content">

		<div class="content-column sidebar full-content">

			<%= render 'pages/user/dashboard_side_panel' %>

		</div>


		<div class="content-column sidebar-content">

			<%= render 'pages/user/warnings' %>

			<h3 class="text-header-underline"><span class="glyphicon glyphicon-stats" aria-hidden="true" style="margin-right: 5px;"></span>Recent Activity</h3>

			<% current_user.recent_activity.each do |activity| %>

				<div class="activity">


					<% if activity['type'] == "view" %>
						<p><span class="glyphicon glyphicon-eye-open" aria-hidden="true" style="margin-right: 5px;"></span>[Someone] viewed your work, <%= activity['object'].item_art.name %>, on <%= activity['created_at'].strftime("%b %d") %></p>
					<% elsif activity['type'] == "purchase" %>

						<p class="sale"><span class="glyphicon glyphicon-usd" aria-hidden="true" style="margin-right: 5px;"></span>[Someone] purchased your work, <%= activity['object'].item_art.name %>, on <%= activity['created_at'].strftime("%b %d") %></p>

					<%end%>

					

				</div>

				<br>
				

			<%end%>

		</div>

	</div>

<%end%>