<% unless user_signed_in? %>
	
	<div class="content">

		<%= render 'pages/basic_landing_page' %>
	
	</div>

<%else%>
	
	<% if current_user.is_artist %>

		<% if current_user.item_arts.count == 0 %>

			<div class="notice yellow">

				<span class="glyphicon glyphicon-remove dismiss-parent"></span>

				<p class="notice-content">
					<span class="glyphicon glyphicon-exclamation-sign"></span> You have not posted any of your work. <%= link_to "Add Art Works", new_item_art_path %> to promote your work to the ART network.
				</p>

			</div>

		<%end%>

		<% if current_user.exhibitions.count == 0 %>
				
			<div class="notice red">

				<span class="glyphicon glyphicon-remove dismiss-parent"></span>

				<p class="notice-content">
					<span class="glyphicon glyphicon-exclamation-sign"></span>You have not posted  any of your exhibitions.  <%= link_to "Add Exhibitions", new_exhibition_path %> in order to promote your exhibitions to the ART network.
				</p>

			</div>

		<%end%>

		<div class="content">
			
			<%= render 'pages/artist_dashboard' %>

		</div>

	<% elsif current_user.is_buyer %>

		<div class="content">

			<%= render 'pages/buyer_dashboard' %>

		</div>

	<%end%>

<%end%>