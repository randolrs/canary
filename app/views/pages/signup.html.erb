
<div class="simple-landing-container">

  <%= form_for(:user, :url => registration_path(:user)) do |f| %>

    <h2>ArtYam</h2>

    <div class="field">
      <label>Email</label>
      <br>
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>
    
    <div class="field">
      <label>Display Name</label>
      <br>
      <%= f.text_field :display_name, placeholder: "Display Name" %>
    </div>

    <div class="field">
      <label>Password</label>
      <br>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Account", class: "button medium orange-background" %>
    </div>

    <%= hidden_field_tag 'is_artist', true %>

  <% end %>

  <p class="centered"><%= link_to "Login", login_path %></p>

  

</div>