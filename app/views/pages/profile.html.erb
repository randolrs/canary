<%# render 'headers/context_header' %>

<div class="open-page-container">

	<div class="profile-header">

		<div class="profile-header-content">

			<div class="profile-header-image">

				<%= image_tag @user.image.url(:medium), class: "medium-profile-image"%>

			</div>

			<div class="profile-header-text">

				<h2><%= @user.display_name %></h2>

				<% if @user.about.length > 0 %>

					<p class="about"><%= @user.about %></p>
					
				<%else%>

					<% if user_signed_in?%>

						<% if current_user.is_me(@user) %>
							
							<div class="nothing-to-see-container no-margin">

								<p>You have not written a bio yet. <%= link_to "Go to Account Settings", settings_path, class: "warning-text-cta" %> to update bio.</p>

							</div>

						<%end%>

					<%end%>

				<%end%>

			</div>

			<% if user_signed_in? %>
				
				<% unless current_user.id == @user.id %>
				
					<a class="message-modal modal-cta button medium red-frame">Contact</a>

				<%end%>

			<%end%>

		</div>

	</div>

	<div class="profile-content">

		<div id="portfolio">

			<% if @user.item_arts.count > 0 %>

				<% @user.item_arts.each do |item| %>

					<%= link_to(item) do %>
					
						<div class="lightbox">

							<h4><%= item.name %></h4>

							<%= image_tag item.image.url, class: "medium-item-image"%>

							<h4><%= number_to_currency(item.price)%></h4>

						</div>

					<% end %>

				<% end %>

			<%else%>

				<div class="nothing-to-see-container">

					<p>

						<% if user_signed_in?%>

							<% if current_user.id == @user.id %>
								You have not shared any artwork yet. <%= link_to "Add Art Works", new_item_art_path, class: "warning-text-cta" %>
							<%else%>

								<%= @user.display_name%> has not shared any artwork yet.

							<%end%>

						<%else%>

							<%= @user.display_name%> has not shared any artwork yet.

						<%end%>

					</p>

				</div>



			<%end%>

		</div>


	</div>

</div>

<%= render 'messages/modal_form' %>