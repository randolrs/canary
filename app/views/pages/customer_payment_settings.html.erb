
<% if user_signed_in? %>

	<%= render 'pages/user/dashboard_side_panel' %>

	<div class="dashboard-container">

		<%= render 'pages/user/dashboard_header' %>

		<%= render 'pages/user/settings_header' %>

		<div class="dashboard-item">

			<h3>Stored Payment Methods</h3>

			<% if @customer_cards %>

				<% @customer_cards.each do |card| %>

					<div class="dashboard-index">
						
						<div><%=card.brand + " •••• •••• •••• " + card.last4 %></div>
						<div><%= card.exp_month.to_s + "/" + card.exp_year.to_s %></div>
						<div class="align-right block"><% if @stripe_customer_object.default_source == card.id %><a class="button green-background right-margin"><span class="glyphicon glyphicon-ok" style="margin-right: 5px;"></span>Default</a><%else%><a class="button bright-blue-background right-margin">Make Default</a><%end%><a class="button orange-background right-margin">Edit</a><a class="button red-frame">Delete</a></div>

					</div>

				<%end%>

			<%end%>

			<br><br>

			<a class="button green-background modal-cta new-card-modal">Add New Credit Card</a>

		</div>

	</div>

<%end%>

<%= render 'modals/new_card_modal' %>
	
	