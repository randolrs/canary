<div class="medium-landing-container">

	<%= form_for(current_user, :url => registration_path(current_user)) do |f| %>
<!-- 	<form name="setup_user" action="/setup_user/" method="POST"> -->

		<div id="welcome-panel">

			<h2>Welcome to Artagami!</h2>
			
			<h2>Are You an Artist?</h2>

			<a class="button blue-background" id="i-am-artist">Yes</a>

			<%# f.check_box :is_artist, class:"welcome-select-input", id:"is_artist_input" %>

			<div style="display:none">

				<%= check_box_tag "user[is_artist]" %>

			</div>

			<a class="button red-background" id="i-am-buyer">No</a>

			<div style="display:none">
				
				<%= check_box_tag "user[is_buyer]" %>

			</div>

			<%# f.check_box :is_buyer, class:"welcome-select-input", id:"is_buyer_input" %>

		</div>

		<div style="display:none;" id="exhibition-panel">
			
			<h2>Awesome! We're so glad you're here.  <br><br> Do you already have a public exhibition of your art?</h2>

			<a class="button blue-background" id="exhibition-yes">Yes</a>

			<a class="button red-background" id="exhibition-no">No</a>

		</div>

		<div style="display:none;" id="location-panel">
			
			<h2 style="display:none;" id="location-header-artist-has-exhibit">Very cool. We want to help you sell more art. <br><br> Where is your exhibition located?</h2>

			<h2 style="display:none;" id="location-header-artist-no-exhibit">No problem. We'll help connect you with the perfect venue to showcase your art. <br><br> Where are you located?</h2>

			<h2 style="display:none;" id="location-header-buyer">Thanks for checking us out! <br><br> Where are you located?</h2>
			
			<%= f.collection_select(:home_city_id, City.all, :id, :name, :prompt => 'Select City') %>

			<br>

			<a class="button blue-background" id="location-continue">Continue</a>

			<br>

			<%= link_to "I don't see my city...", root_path %>

		</div>

		<div  id="get-started-panel">
			
			<h2>Thanks for answering those questions.  <br><br>Let's get started <span id="welcome-action"></span></h2>

<!-- 			<input type="submit" class="button blue-background" value="Get Started"></input> -->

			<div style="display:none;">
				
				<%= f.check_box :onboarded, {:checked=>true} %> 
			</div>

			<%= f.submit "Get Started", class: 'button medium blue-background' %>

		</div>

<!-- 	</form> -->

	<% end %>

</div>