<div class="modal-container" id="message-modal">

  <div class="modal-content">

    <span class="glyphicon glyphicon-remove dismiss-modal"></span>

    <%= form_for(@message) do |f| %>

    <h3>Message to <span><%= image_tag @message_recipient.image.url(:medium), class: "header-profile-image"%><%= @message_recipient.display_name %></span></h3>

      <%= f.number_field :recipient_id, :value => @message_recipient.id, :hidden => true  %>

      <div class="field">
        <%= f.text_area :body %>
      </div>
      
      <div class="actions">
        <%= f.submit "Send", class: 'button red-background'  %>
      </div>
    <% end %>

  </div>


</div>
