<div class="medium-content">

	<div class="message-index">

		<div class="message-sender">

			<span><%= image_tag @message.sender.image.url(:medium), class: "header-profile-image"%><span class="message-list-sender"><%=  @message.sender.display_name %></span></span>

		</div>

		<div class="message-text">

			<span><%= @message.body %></span>

		</div>

	</div>

	<% @message.responses.each do |response| %>

		<div class="message-index">

			<div class="message-sender">

				<span><%= image_tag response.sender.image.url(:medium), class: "header-profile-image"%><span class="message-list-sender"><%=  response.sender.display_name %></span></span>

			</div>

			<div class="message-text">

				<span><%= response.body %></span>

			</div>

		</div>

	<%end%>


	<%= form_for(@new_message) do |f| %>

      <%= f.number_field :recipient_id, :value => @new_message_recipient.id, :hidden => true  %>

      <%= f.number_field :parent_message_id, :value => @message.id, :hidden => true  %>

      <div class="field">
        <label>Reply</label><br>
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit "Send", class: 'button red-background'  %>
      </div>

    <% end %>

</div>
