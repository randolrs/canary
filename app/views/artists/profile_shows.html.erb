<div class="open-page-container">

  <div class="profile-header">

    <div class="profile-header-content">

        <%= image_tag @artist.image.url(:medium), class: "medium-profile-image"%>

        <br>

        <h2><%= @artist.name %></h2>

        <p><%= @artist.nationality %>, b. <%= @artist.birth_year %></p>

    </div>

  </div>

  <div class="profile-content">

    <div class="section-header-nav">

      <ul>
        <li><a href="<%= artist_profile_path(@artist.name) %>" class="click-to-reveal">Works</a></li><li><a href="<%= artist_profile_about_path(@artist.name) %>">About</a></li><li><a class="active" href="<%= artist_profile_shows_path(@artist.name) %>">Shows</a></li>
      </ul>

    </div>


    <div class="reveal-panel" id="shows">
      <% if @artist.shows.count > 0 %>
      
        <%= render partial: 'shows/index_grid', :locals => {:shows =>  @artist.shows, :image_only => false, :columns => 3} %>
      
      <%else%>

        <div class="nothing-to-see-container"> 
          <p><%= @artist.name %> does not have any shows listed on ArtYam.</p>
        </div>

      <%end%>

    </div>

  </div>

</div>
