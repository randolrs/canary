<div class="open-page-container">

  <div class="profile-header">

    <div class="profile-header-content">

        <%= image_tag @artist.image.url(:medium), class: "medium-profile-image"%>

        <br>

        <h2><%= @artist.name %></h2>

        <p><%= @artist.nationality %>, b. <%= @artist.birth_year %></p>

    </div>

  </div>

  <div class="profile-content">

    <div class="section-header-nav">

      <ul>
        <li><a href="<%= artist_profile_path(@artist.name) %>" class="click-to-reveal">Works</a></li><li><a class="active" href="<%= artist_profile_about_path(@artist.name) %>">About</a></li><li><a href="<%= artist_profile_shows_path(@artist.name) %>">Shows</a></li>
      </ul>

    </div>


    <div class="reveal-panel" id="about">
      <br>

      <% if @artist.biography %>

        <h4>Biography</h4>

        <p><%= @artist.biography %></p>

      <%end%>

      <br><br>

      <% if @artist.artist_statement %>

        <h4>Artist Statement</h4>

        <p><%= @artist.artist_statement %></p>

      <%end%>


    </div>

  </div>

</div>
